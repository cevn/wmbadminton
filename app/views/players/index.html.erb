<% provide(:title, 'All entries') %>
<h1>All entries</h1>

<nav class="navbar navbar-default" role="navigation"> 
  <div class="collapse navbar-collapse" >

    <form accept-charset="UTF-8" action="/players" 
          class="navbar-form navbar-right"
          role = "search" 
          id="player_search" 
          method="get">
      <div class="form-group"> 
        <input id="q_name_cont" name="q[name_cont]" type="text" class="form-control" placeholder="Search by name">
      </div>
      <button name="Submit" type="submit" class="btn btn-default" >Search</button>
    </form>
  </div> 
</nav>

<div class="text-center">
  <%= will_paginate @players, renderer: BootstrapPagination::Rails, bootstrap: 3 %>
</div>

<div class="col-md-8 col-md-offset-2"> 
  <ul class="players">
    <%= render @players %>
  </ul>
</div> 


